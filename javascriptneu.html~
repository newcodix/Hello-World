<OCTYPE html>
    <html>
    <head>
        <title>Javascript Tutorial</title>
        <meta charset = "utf-8"/>
    </head>
    <body>
    <p id="conf">Bestätigen</p>
   
    <script>                                 
    let txt; // Javascript Variable
    document.getElementById("conf").onclick = function () {
        let result = confirm ('Bitte bestätigen oder canceln');
        if (result === true) {
        txt  = "Wurde bestätigt";
        } else {
        txt = "Wurde abgelehnt";
        }
        document.write(txt)
    }
    
    </script>
    
    </body>
    </html>